<div class="stats <%= "incomplete" unless stats.all?(&:completed?) %>">
  <% stats.each do |stat| %>
    <p class="stat">
      <span class="stat-name"><%= stat.name %></span>
      <span class="stat-level-thermometer stat-average-level">
        <span class="stat-level-group stat-level-value <%= rank(stat) %>" style="width: <%= stat.level || 0 %>%;"></span>
        <span class="stat-level-personal stat-level-value <%= rank(stat) %>" style="width: <%= stat.my_level || 0 %>%;"></span>
      </span>
      <img class="stat-rank" src="/<%= rank(stat) %>.svg" />
    </p>
  <% end %>
  
  <div class="stat-guides">
    <div class="stat-guide advanced-beginner"></div>
    <div class="stat-guide competent"></div>
    <div class="stat-guide proficient"></div>
    <div class="stat-guide master"></div>
  </div>
</div>
